<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbarSize="25dp">

    <TextView
        android:id="@+id/answerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cookierunfont_blod"
        android:text="@string/answerTitle"
        android:textColor="#815854"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/answerMainIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/answerMainIv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/answerIv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ddabong" />

    <ImageView
        android:id="@+id/answerBubbleIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-20dp"
        android:contentDescription="@string/answerIv2"
        app:layout_constraintEnd_toEndOf="@+id/answerMainIv"
        app:layout_constraintTop_toTopOf="@+id/answerMainIv"
        app:srcCompat="@drawable/bubble" />

    <TextView
        android:id="@+id/answerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/suseongdotum"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/answerBubbleIv"
        app:layout_constraintEnd_toEndOf="@+id/answerBubbleIv"
        app:layout_constraintStart_toStartOf="@+id/answerBubbleIv"
        app:layout_constraintTop_toTopOf="@+id/answerBubbleIv" />

    <TextView
        android:id="@+id/answerTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/answerScore"
        android:textColor="@color/black"
        android:fontFamily="@font/suseongdotum"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/answerScore"
        app:layout_constraintStart_toEndOf="@+id/answerScore" />

    <Button
        android:id="@+id/answerBtn"
        android:layout_width="250dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:drawableStart="@drawable/ic_baseline_arrow_forward_24"
        android:text="@string/answerBtn"
        android:fontFamily="@font/cookierunfont_regular"
        android:textSize="22sp"
        android:paddingEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/answerMainIv"
        app:layout_constraintEnd_toEndOf="@+id/answerMainIv"
        app:layout_constraintStart_toStartOf="@+id/answerMainIv" />

</androidx.constraintlayout.widget.ConstraintLayout>