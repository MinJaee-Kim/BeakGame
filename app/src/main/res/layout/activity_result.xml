<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="#815854"
        android:textSize="30sp"
        android:fontFamily="@font/cookierunfont_blod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/resultIv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:contentDescription="@string/resultIv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultText"
        app:srcCompat="@drawable/beak" />

    <ImageView
        android:id="@+id/resultIv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-40dp"
        android:contentDescription="@string/resultIv2"
        app:layout_constraintEnd_toEndOf="@+id/resultIv1"
        app:layout_constraintTop_toTopOf="@+id/resultIv1"
        app:srcCompat="@drawable/bubble" />

    <TextView
        android:id="@+id/resultLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/suseongdotum"
        android:textColor="#815854"
        android:text="@string/resultBubble"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/resultIv2"
        app:layout_constraintEnd_toEndOf="@+id/resultIv2"
        app:layout_constraintStart_toStartOf="@+id/resultIv2"
        app:layout_constraintTop_toTopOf="@+id/resultIv2" />

    <Button
        android:id="@+id/resultBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background"
        android:drawableStart="@drawable/ic_baseline_replay_24"
        android:fontFamily="@font/cookierunfont_regular"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:text="@string/resultBtn"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultIv1" />

    <TextView
        android:id="@+id/resultTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/cookierunfont_regular"
        android:gravity="center"
        android:text="@string/resultScore"
        android:textColor="#815854"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/resultBtn"
        app:layout_constraintTop_toTopOf="@+id/resultBtn" />

    <TextView
        android:id="@+id/resultScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/cookierunfont_regular"
        android:textColor="#815854"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/resultTv"
        app:layout_constraintStart_toEndOf="@+id/resultTv" />

    <ImageButton
        android:id="@+id/resultKakaoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#00ff0000"
        app:layout_constraintStart_toEndOf="@+id/resultScore"
        app:layout_constraintTop_toTopOf="@+id/resultScore"
        android:contentDescription="@string/resultKakao"
        app:srcCompat="@drawable/kakaobtn" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/resultAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7394882970303365/8154998012"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>